<body>
    <h1>TODOS LOS USUARIOS</h1>
    <table class="table">
        <thead>
          <tr>
            <th scope="col"># ID</th>
            <th scope="col">NOMBRE</th>
            <th scope="col">EDAD</th>
            <th scope="col">OPCIONES</th>
          </tr>
        </thead>
        <tbody> 
            <% users.forEach(user => { %>
                <tr>
                    <td scope="row"><%= user.id %></td>
                    <td><%= user.name %></td>
                    <td><%= user.age %></td>
                    <td>
                        <a class="btn btn-success" href="/users/update/<%= user.id %>">Editar</a>
                        <a class="btn btn-danger" href="/users/delete/<%= user.id %>">eliminar</a> 
                    </td>
                </tr> 
            <% }) %>
        </tbody>
      </table>


